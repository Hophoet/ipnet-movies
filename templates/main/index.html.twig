{% extends 'base.html.twig' %}

{% block content %}
	<!-- home -->
	<section class="home">
		<!-- home bg -->
		<div class="owl-carousel home__bg">
			<div class="item home__cover" data-bg="{{ asset('assets/img/home/home__bg.jpg') }}"></div>
			<div class="item home__cover" data-bg="{{ asset('assets/img/home/home__bg2.jpg') }}"></div>
			<div class="item home__cover" data-bg="{{ asset('assets/img/home/home__bg3.jpg') }}"></div>
			<div class="item home__cover" data-bg="{{ asset('assets/img/home/home__bg4.jpg') }}"></div>
		</div>
		<!-- end home bg -->

		<div class="container">
			<div class="row">
				
				<div class="col-12">
					<h1 class="home__title"><b>POPULAR</b> MOVIES</h1>

					<button class="home__nav home__nav--prev" type="button">
						<i class="icon ion-ios-arrow-round-back"></i>
					</button>
					<button class="home__nav home__nav--next" type="button">
						<i class="icon ion-ios-arrow-round-forward"></i>
					</button>
				</div>

				<div class="col-12">
					<div class="owl-carousel home__carousel">
						{% for movie in movies %}
						
						<div class="item">
							<!-- card -->
							<div class="card card--big">
								<div class="card__cover">
									{% if movie.image %}
										<img src="{{ '/movies/' ~ movie.image }}" alt="{{movie.title}}">
									{% else %}
										<img src="{{ asset('assets/img/covers/cover.jpg') }}" alt="{{movie.title}}">
									{% endif %}
									
									<a href="{{ path('movie', {'id':movie.id}) }}" class="card__play">
										<i class="icon ion-ios-more"></i>
									</a>
								</div>
								<div class="card__content">
									<h3 class="card__title"><a href="#">{{ movie.title }}</a></h3>
							
									<span class="card__category">
										{% for genre in movie.genres %}
										<a href="#">{{ genre.title }}</a>
										{% endfor %}
									</span>
									<span class="card__rate"><i class="icon ion-ios-star"></i>{{ movie.voteAverage }}</span>
								</div>
							</div>
							<!-- end card -->
						</div>
				
					
								{% endfor %}

					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- end home -->
{% endblock%}