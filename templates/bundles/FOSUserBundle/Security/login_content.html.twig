{% extends 'authbase.html.twig' %}

{% block content %}
{% trans_default_domain 'FOSUserBundle' %}



<form class="sign__form" action="{{ path("fos_user_security_check") }}" method="post">
    {% if error %} 
        <span class="sign__text">{{ error.messageKey|trans(error.messageData, 'security') }}<a href="signup.html"></a></span>
        <h1></h1>
    {% endif %}
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="sign__group">
        <!-- <label for="username">{{ 'security.login.username'|trans }}</label> -->
        <input class="sign__input"  type="text" placeholder={{ 'security.login.username'|trans }} id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
    </div>

    <div class="sign__group">
        <!-- <label for="password">{{ 'security.login.password'|trans }}</label>-->
        <input class="sign__input" placeholder={{ 'security.login.password'|trans }} type="password" id="password" name="_password" required="required" autocomplete="current-password" />
    </div>

    <div class="sign__group sign__group--checkbox">
    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    
    <button class="sign__btn" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" >{{ 'security.login.submit'|trans }}</button>

    <span class="sign__text">Don't have an account? <a href="{{ path('fos_user_registration_register') }}">Sign up!</a></span>
	<!--<span class="sign__text"><a href="{{ path('fos_user_resetting_request') }}">Forgot password?</a></span> -->
</form>

{% endblock %}